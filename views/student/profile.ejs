<%- include('partials/studentNavbar') %>

<h3>Profile Update</h3>
<br />
<a href="/student/change-password">Change Password</a>
<br />

<%- include ("./partials/messages"); %>

<br />
<form id="updateProfileForm" action="/student/profile-update" method="POST">
  <label for="name">Name:</label><br />
  <input type="text" id="name" name="name" value="<%= user.name %>" /><br />

  <label for="email">Email:</label><br />
  <input type="email" id="email" value="<%= user.email %>" disabled /><br />

  <label for="year">Year:</label><br />
  <input type="number" id="year" name="year" value="<%= user.year %>" /><br />

  <label for="rollNumber">Roll Number:</label><br />
  <input
    type="text"
    id="rollNumber"
    name="rollNumber"
    value="<%= user.rollNumber %>"
  /><br />

  <label for="phoneNumber">Phone Number:</label><br />
  <input
    type="text"
    id="phoneNumber"
    name="phoneNumber"
    value="<%= user.phoneNumber %>"
  /><br />

  <label for="leetcodeId">LeetCode ID:</label><br />
  <input
    type="text"
    id="leetcodeId"
    name="leetcodeId"
    value="<%= user.leetcodeId %>"
  /><br />

  <label for="gitHub">GitHub:</label><br />
  <input
    type="text"
    id="gitHub"
    name="gitHub"
    value="<%= user.gitHub %>"
  /><br />

  <input type="submit" value="Submit" />
</form>
