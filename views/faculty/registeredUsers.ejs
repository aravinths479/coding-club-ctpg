<%- include('partials/facultyNavbar') %>

<br />
<div class="container">
  <h2><%= eventName %></h2>
  <br />
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <% for (var i = 0; i < teamMaxSize; i++) { %>
          <th>Student <%= i + 1 %></th>
          <th>Roll No <%= i + 1 %></th>
          <th>Phone Number <%= i + 1 %></th>
          <th>Year <%= i + 1 %></th>
          <% } %>
        </tr>
      </thead>

      <tbody>
        <% registeredUsers.forEach(function(user) { %>
        <tr>
          <% for (var i = 0; i < teamMaxSize; i++) { %> <% if
          (user.teamMembers[i]) { %>
          <!-- Render each team member -->
          <td><%= user.teamMembers[i].name %></td>
          <td><%= user.teamMembers[i].rollNo %></td>
          <td><%= user.teamMembers[i].phoneNumber %></td>
          <td><%= user.teamMembers[i].year %></td>
          <!-- Add more columns as needed -->
          <% } else { %>
          <!-- If no team member exists for this column, render empty cells -->
          <td></td>
          <td></td>
          <td></td>
          <!-- Add more columns as needed -->
          <% } %> <% } %>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
